<Window x:Class="DeLauncherForm.AbortWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DeLauncherForm"
        mc:Ignorable="d"
        Title="AbortWindow" Height="500" Width="700" WindowStyle="SingleBorderWindow" ResizeMode="NoResize">
    <Window.Background>
        <ImageBrush ImageSource="Resources/sent.jpg"/>
    </Window.Background>
    
    
    <Grid Margin="0,0,4,0">
        <TextBox x:Name = "ErrorMessage1" IsReadOnly="True" HorizontalAlignment="Left" Height="35" Margin="62,345,0,0" TextWrapping="Wrap" Text="Another instance of DeLauncher is already running!" FontSize="20" VerticalAlignment="Top" Width="557"
                 Background="LightGray"/>
        <TextBox x:Name = "ErrorMessage2" IsReadOnly="True" HorizontalAlignment="Left" Height="35" Margin="62,385,0,0" TextWrapping="Wrap" Text="Please wait and/or reboot the launcher" FontSize="20" VerticalAlignment="Top" Width="557"
                 Background="LightGray"/>
        <Button x:Name="Ok" Content="OK" IsDefault = "true" HorizontalAlignment="Left" Margin="305,425,0,0" VerticalAlignment="Top" Width="102" Height="37" FontSize="20"/>
    </Grid>
</Window>
